{
    "name": "soloterm/grapheme",
    "description": "A PHP package to measure the width of unicode strings rendered to a terminal.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Francis",
            "email": "aarondfrancis@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "symfony/polyfill-intl-normalizer": "^1.27.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11"
    },
    "autoload": {
        "psr-4": {
            "SoloTerm\\Grapheme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoloTerm\\Grapheme\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-intl": "For best performance"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
